<p id="notice"><%= notice %></p>

<p>
  <strong>Owner:</strong>
  <%= @group.owner.email %>
</p>

<p>
  <strong>Name:</strong>
  <%= @group.name %>
</p>

<div>
  <h3>Expenses</h3>
  <table>
    <thead>
      <tr>
        <th>Customer</th>
        <th>Title</th>
        <th>Amount</th>
        <th>Description</th>
        <th colspan="3">Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @expenses.each do |expense| %>
        <tr>
          <td><%= expense.customer.email %></td>
          <td><%= expense.title %></td>
          <td><%= expense.amount %></td>
          <td><%= expense.description %></td>
          <td><%= link_to 'Show', expense %></td>
          <td><%= link_to 'Edit', edit_expense_path(expense) %></td>
          <td><%= link_to 'Destroy', expense, method: :delete, data: { confirm: 'Are you sure?' } if authorize_to_edit_expense?(@group, expense) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= link_to 'Edit', edit_group_path(@group) %> |
<%= link_to 'Back', groups_path %>
